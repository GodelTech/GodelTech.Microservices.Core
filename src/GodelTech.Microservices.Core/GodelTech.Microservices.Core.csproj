<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<PackageId>GodelTech.Microservices.Core</PackageId>
		<VersionPrefix>3.0.0</VersionPrefix>
		<Authors>Andrei Salanoi</Authors>
		<Company>Godel Technologies</Company>
		<Description>Library contains base components and interfaces of Microservices Framework. Whole idea of framework is based on components called initializers.</Description>
		<Copyright>Godel Technologies 2020</Copyright>
		<PackageLicenseUrl>https://github.com/GodelTech/GodelTech.Microservices.Core/blob/master/LICENSE</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/GodelTech/GodelTech.Microservices.Core/wiki</PackageProjectUrl>
		<PackageIconUrl>https://www.gravatar.com/avatar/839234621070de51e7b9cabd5ceee8fe?s=64</PackageIconUrl>
		<RepositoryUrl>https://github.com/GodelTech/GodelTech.Microservices.Core</RepositoryUrl>
		<PackageTags>dotnet core microservice</PackageTags>

		<AnalysisMode>AllEnabledByDefault</AnalysisMode>

		<!-- XML documentation -->
		<GenerateDocumentationFile>true</GenerateDocumentationFile>

		<!-- Source Link needs this -->
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<!-- SonarQube needs this -->
		<ProjectGuid>{00000000-0000-0000-0000-000000000001}</ProjectGuid>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<!-- Source Link needs this -->
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
	</ItemGroup>

</Project>
